---
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
import SocialPill from "../icons/SocialPill.astro";
import GitHub from "../icons/GitHub.astro";
import Instagram from "../icons/Instagram.astro";
import Tonet from "../icons/Tonet.astro";
import EmailIcon from "../icons/EmailIcon.astro";
import Proyectos from "../components/Proyectos.astro";
import ProyectosIcono from "../icons/ProyectosIcono.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import HtmlIcon from "../icons/HtmlIcon.astro";
import CssIcon from "../icons/CssIcon.astro";
import JavaScriptIcon from "../icons/JavaScriptIcon.astro";
import JavaIcon from "../icons/JavaIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import ExpressIcon from "../icons/ExpressIcon.astro"; 
import MysqlIcon from "../icons/MysqlIcon.astro";
import MariadbIcon from "../icons/MariadbIcon.astro";
import PhpIcon from "../icons/PhpIcon.astro";
import NodejsIcon from "../icons/NodejsIcon.astro";
import BootstrapIcon from "../icons/BootstrapIcon.astro";
import CsharpIcon from "../icons/CsharpIcon.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import DockerIcon from "../icons/DockerIcon.astro";
import AngularIcon from "../icons/AngularIcon.astro";
---

<Layout
  title="Portfolio Tonet - Desarrollador y Programador web con 3 años de experiencia"
  description="Contrata a Tonet para crear tu aplicación web o móvil. Desarrollador Web y Creador de contenido para la comunidad. Especializado en crear aplicaciones únicas."
>
  <main class="">
    <!-- Hey Section -->
    <SectionContainer class="py-44 pb-20" id="my">
      <Tonet />
      <h1
        class="text-xl lg:text-5xl sm:text-3xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Tonet <a
          href="https://www.linkedin.com"
          target="_blank"
          class="flex justify-center items-center gap-x-4"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1><h2 class="text-2xl opacity-70 max-w-[700px]">
        <span class="opacity-60"> +3 años de experiencia </span>
        . <span class="opacity-90"
          >Desarrollador Web y Creador de contenido</span
        >. <span class="opacity-50">De Alicante, España. </span><span
          class="opacity-90"
          >Especializado en desarrollar aplicaciones únicas.
        </span>
      </h2>
      <nav class="flex gap-4 mt-4 flex-wrap">
        <SocialPill href="https://github.com/Ton3t">
          <GitHub class="size-4 lg:size-6" />GitHub
        </SocialPill>
        <SocialPill href="https://www.instagram.com/elton3t/">
          <Instagram class="size-4 lg:size-6" />Instagram
        </SocialPill>
        <SocialPill href="#">
          <EmailIcon class="size-4 lg:size-6" />elton3t@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <!-- EL COMPONENTE EXTRAIDO DE TAILWIND DA PROBLEMAS CON LOS MARGENES DE LA PÁGINA -->
    <SectionContainer id="proyectos" class="section-projects">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <ProyectosIcono class="size-7" />
        Proyectos
      </h2>
      <Proyectos />
    </SectionContainer>

    <!-- Seciont Tecnologias -->
    <SectionContainer id="sobremi" class="mt-20">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon />
        Tecnologías de las que dispongo
      </h2>
      <nav class="flex gap-4 mt-4 flex-wrap opacity-95">
        <SocialPill>
          <HtmlIcon class="size-4 lg:size-6" />HTML
        </SocialPill>
        <SocialPill>
          <CssIcon class="size-4 lg:size-6" />CSS
        </SocialPill>
        <SocialPill>
          <JavaScriptIcon class="size-4 lg:size-6" />JavaScript
        </SocialPill>
        <SocialPill>
          <JavaIcon class="size-4 lg:size-6" />Java
        </SocialPill>
        <SocialPill>
          <ReactIcon class="size-4 lg:size-6" />React
        </SocialPill>
        <SocialPill>
          <ExpressIcon class="size-4 lg:size-6" />Express
        </SocialPill>
        <SocialPill>
          <MysqlIcon class="size-4 lg:size-6" />Mysql
        </SocialPill>
        <SocialPill>
          <MariadbIcon class="size-4 lg:size-6" />MariaDB
        </SocialPill>
        <SocialPill>
          <PhpIcon class="size-4 lg:size-6" />Php
        </SocialPill>
        <SocialPill>
          <NodejsIcon class="size-4 lg:size-6" />NodeJS
        </SocialPill>
        <SocialPill>
          <BootstrapIcon class="size-4 lg:size-6" />Bootstrap
        </SocialPill>
        <SocialPill>
          <CsharpIcon class="size-4 lg:size-6" />C#
        </SocialPill>
        <SocialPill>
          <AstroIcon class="size-4 lg:size-6" />Astro
        </SocialPill>
        <SocialPill>
          <DockerIcon class="size-4 lg:size-6" />Docker
        </SocialPill>
        <SocialPill>
          <AngularIcon class="size-4 lg:size-6" />Angular
        </SocialPill>
      </nav>
      
    </SectionContainer>

  </main>
</Layout>
